---
/* 
    This component was  
    provided by "AstroUI" free and open source AstroUI components library.
    Link: https://astroui.vercel.app/
*/
import cv from "@cv";
import Image from "astro/components/Image.astro";

/* 
    Logos were provided by "svgl" free and open source icons library.
    Link: https://svgl.app/
*/
const { stack } = cv;

const dobleStack = stack.concat(stack);
---

<section
  class="w-full text-center flex flex-col justify-center items-center gap-10 max-w-3xl px-4 py-20 sm:py-24 pointer-events-none"
>
  <div
    class="w-full max-w-xl flex flex-col justify-center items-start sm:items-center gap-3"
  >
    <h2
      class="sm:text-center text-normal sm:text-lg md:text-xl tracking-tighter"
    >
      My Stack
    </h2>
    <p
      class="text-muted-foreground sm:text-center text-sm sm:text-normal md:text-lg font-light tracking-tighter"
    >
      Here are some of the technologies I've worked with.
    </p>
  </div>
  <div
    class="w-full h-fit max-w-3xl flex flex-col justify-center select-none overflow-hidden gradient"
  >
    <div class="w-max flex flex-nowrap gap-[4rem] animate-slide-logos">
      {
        dobleStack.map((logo) => (
          <Image
            src={logo.src}
            alt={logo.alt}
            width={80}
            height={80}
            loading="eager"
            class="size-20 object-contain"
          />
        ))
      }
    </div>
  </div>
</section>

<style>
  .gradient {
    mask: linear-gradient(
      90deg,
      transparent,
      black 20%,
      black 80%,
      transparent
    );
    webkitmask: linear-gradient(
      90deg,
      transparent,
      black 20%,
      black 80%,
      black transparent
    );
  }
</style>
