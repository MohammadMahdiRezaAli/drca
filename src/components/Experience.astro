---
import cv from "@cv";
import ExperienceCard from "./ExperienceCard.astro";

const { basics } = cv;

const { experience } = basics;
---

<section
  class="w-full flex flex-col gap-10 items-center justify-center px-4 py-20 sm:py-24 overflow-hidden"
>
  <div
    class="w-full max-w-xl flex flex-col justify-center items-start sm:items-center gap-3"
  >
    <h2
      class="text-foreground text-normal sm:text-lg md:text-xl tracking-tighter"
    >
      Experience
    </h2>
    <p
      class="text-muted-foreground sm:text-center text-sm sm:text-normal md:text-lg font-light tracking-tighter"
    >
      Here are some of the places I've worked at.
    </p>
  </div>
  <div class="flex flex-col pointer-events-auto">
    {experience.map((exp) => <ExperienceCard {...exp} />)}
  </div>
</section>
